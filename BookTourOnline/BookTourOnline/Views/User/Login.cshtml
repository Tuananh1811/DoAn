@model BookTourOnline.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_layoutDetail.cshtml";
}


<div class=" row no-margin no-padding" style="width:90%; margin: 50px auto !important;">
    <div class="row">
        <div class="col-md-12 row">
            <div class="col-md-6 " style="margin:0 auto; padding:0;">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))

                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Đăng nhập</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <br />
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                       <br />
                        <a href="#"class="" style="color:#337ab7 !important; font-size:12px;text-transform:uppercase">Quên mật khẩu?</a>
                        <br />
                        <br />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đăng nhập" style="background-color: #a5190e; color:#fff; border:none;padding:8px 10px; border-radius:5px;" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>

