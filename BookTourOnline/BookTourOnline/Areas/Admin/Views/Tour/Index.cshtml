@model PagedList.IPagedList<Model.EF.Tour>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý tour";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<h2>Quản lý tour du lịch</h2>

<div class="row">
    <div class="col-lg-10">
        @using (Html.BeginForm("Index", "Tour", FormMethod.Get))
        {
            <div class="row">
