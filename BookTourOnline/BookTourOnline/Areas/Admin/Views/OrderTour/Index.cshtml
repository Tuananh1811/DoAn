@*@model IEnumerable<Model.EF.Order_Tour>*@
@model PagedList.IPagedList<Model.EF.Order_Tour>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<h2>Quản lý đơn tour</h2>


<table class="table">
    <tr>
        <th>
            Ngày tạo
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>*@
        <th>
            Tên khách hàng
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
           Email
        </th>
        <th>
            Điện thoại
        </th>
        <th>
            Trạng thái
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>

                @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))